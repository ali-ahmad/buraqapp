<div class='nested-fields'>
  <div class="col-xs-12 col-md-12">
    <label>Select Language</label>
    <div class="form-group">
      <%= f.select :language_id,  options_for_select(Language.all.pluck(:name, :id)), class: 'form-control custom-select-value' %>
    </div>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <div class="form-group">
     <%= f.text_field :title, :class =>"form-control", required: true, placeholder:'Title' %>
    </div>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <div class="form-group">
       <%= f.file_field :photo, required: true %>
    </div>
  </div>
  <%= link_to_remove_association "remove task", f %>
</div>